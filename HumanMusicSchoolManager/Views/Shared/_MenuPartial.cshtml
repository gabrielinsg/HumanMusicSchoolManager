@using Microsoft.AspNetCore.Identity
@using HumanMusicSchoolManager.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!-- Sidebar -->
<ul class="sidebar navbar-nav">
    <li class="nav-item">
        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
            <i class="fas fa-fw fa-tachometer-alt"></i>
            <span>Dashboard</span>
        </a>
    </li>
    @if (SignInManager.IsSignedIn(User))
    {
        @if (!(User.IsInRole("Professor") || User.IsInRole("Aluno")))
        {
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="pagesDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-chalkboard-teacher"></i>
                    <span>Professor</span>
                </a>
                <div class="dropdown-menu" aria-labelledby="pagesDropdown">
                    <a class="dropdown-item" asp-controller="Professor" asp-action="Index">Lista</a>
                    @if (User.IsInRole("Secretaria") || User.IsInRole("Admin"))
                    {
                        <a class="dropdown-item" asp-controller="Professor" asp-action="Form">Cadastrar</a>
                    }
                </div>
            </li>
        }
        @if (!(User.IsInRole("Professor") || User.IsInRole("Aluno")))
        {
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="pagesDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-chalkboard-teacher"></i>
                    <span>Curso</span>
                </a>
                <div class="dropdown-menu" aria-labelledby="pagesDropdown">
                    <a class="dropdown-item" asp-controller="Curso" asp-action="Index">Lista</a>
                    @if (User.IsInRole("Secretaria") || User.IsInRole("Admin"))
                    {
                        <a class="dropdown-item" asp-controller="Curso" asp-action="Form">Cadastrar</a>
                    }
                </div>
            </li>
        }
        <li class="nav-item">
            <a class="nav-link" href="charts.html">
                <i class="fas fa-fw fa-chart-area"></i>
                <span>Charts</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="tables.html">
                <i class="fas fa-fw fa-table"></i>
                <span>Tables</span>
            </a>
        </li>
    }
</ul>


