@model DemostrativaViewModel
@{
    ViewData["Title"] = "Form";
}

@section Styles{
    <link href="~/css/Estrelas.css" rel="stylesheet" />
}

<div class="row">
    <div class="col-md-12">
        <h2>Demonstrativa</h2>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="jumbotron">
            <h1 class="display-4">@Model.Candidato.Nome</h1>
            <br />
            <div class="row">
                <div class="col-md-12">
                    <b>Horário: </b>
                    <span>
                        @if (Model.DispSala != null)
                        {
                        <span>@Model.Curso.Nome dia @Html.DisplayFor(d => d.DispSala.Dia) às @Model.DispSala.Hora.ToString("00:'00'h") com @Model.DispSala.Professor.Nome na sala @Model.DispSala.Sala.Nome </span>
                        }
                    </span>
                </div>
            </div>

            <br />

            <br />
            <div class="row">
                <div class="col-xl-3 col-md-4">
                    <p>
                        <a class="btn btn-success col-md-12" data-toggle="collapse" href="#dispAula" role="button" aria-expanded="false" aria-controls="collapseExample">
                            <i class="far fa-calendar-alt"></i> Horários Disponíveis
                        </a>
                    </p>
                </div>
            </div>

            <div class="collapse" id="dispAula">
                <div class="card card-body">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped" id="dataTable" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Curso</th>
                                        <th class="text-center">Dia</th>
                                        <th class="text-center">Hora</th>
                                        <th>Período</th>
                                        <th>Sala</th>
                                        <th>Professor</th>
                                        <th class="text-center">Vagas</th>
                                        <th>Selecionar</th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th>Curso</th>
                                        <th class="text-center">Dia</th>
                                        <th class="text-center">Hora</th>
                                        <th>Período</th>
                                        <th>Sala</th>
                                        <th>Professor</th>
                                        <th class="text-center">Vagas</th>
                                        <th>Selecionar</th>
                                    </tr>
                                </tfoot>
                                <tbody>
                                    @foreach (var dispSala in Model.DispSalas)
                                    {
                                        @foreach (var curso in dispSala.Professor.Cursos)
                                        {
                                            var cs = dispSala.Matriculas.FirstOrDefault();
                                            Curso cursoCompara = null;
                                            if (cs != null)
                                            {
                                                cursoCompara = cs.Curso;
                                            }
                                            else if(dispSala.Demostrativas.FirstOrDefault() != null)
                                            {
                                                var demostrativa = dispSala.Demostrativas.FirstOrDefault();
                                                cursoCompara = demostrativa.Curso;
                                            }
                                            else
                                            {
                                                var reposicao = dispSala.Reposicoes.FirstOrDefault();
                                                if (reposicao != null)
                                                {
                                                    cursoCompara = reposicao.Chamada.PacoteCompra.Matricula.Curso;
                                                }
                                            }


                                            if (curso.Curso == cursoCompara || cursoCompara == null)
                                            {
                                                <tr>
                                                    <td c>@curso.Curso.Nome</td>
                                                    <td class="text-center">@Html.DisplayFor(d => dispSala.Dia)</td>
                                                    <td class="text-center">@dispSala.Hora.ToString("00:'00'h")</td>
                                                    <td>
                                                        @if (dispSala.Hora < 12)
                                                        {
                                                            <span>Manhã</span>
                                                        }
                                                        else if (dispSala.Hora < 19)
                                                        {
                                                            <span>Tarde</span>
                                                        }
                                                        else
                                                        {
                                                            <span>Noite</span>
                                                        }
                                                    </td>
                                                    <td>@dispSala.Sala.Nome</td>
                                                    <td>@dispSala.Professor.Nome</td>
                                                    <td class="text-center">
                                                        @(dispSala.Sala.Capacidade - dispSala.Matriculas.Count - dispSala.Reposicoes.Count - dispSala.Demostrativas.Count)
                                                        <!-- Button trigger modal -->
                                                        <a class="btn text-primary" data-toggle="modal" data-target="#exampleModalLong@(dispSala.Id)">
                                                            <i class="fas fa-users text-info"></i>
                                                        </a>

                                                        <!-- Modal -->
                                                        <div class="modal fade" id="exampleModalLong@(dispSala.Id)" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                                                            <div class="modal-dialog" style="max-width: 50%" role="document">
                                                                <div class="modal-content">
                                                                    <div class="modal-header">
                                                                        <h5 class="modal-title" id="exampleModalLongTitle">Alunos matriculados neste horário</h5>
                                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                            <span aria-hidden="true">&times;</span>
                                                                        </button>
                                                                    </div>
                                                                    <div class="modal-body text-left">
                                                                        <h4>Alunos</h4>
                                                                        <table class="table table-sm">
                                                                            <thead>
                                                                                <tr>
                                                                                    <th scope="col">Aluno</th>
                                                                                    <th scope="col" class="text-center">Idade</th>
                                                                                    <th scope="col" class="text-center">Módulo</th>
                                                                                    <th scope="col" class="text-center">Estrelas</th>
                                                                                </tr>
                                                                            </thead>
                                                                            <tbody>
                                                                                @foreach (var matricula in dispSala.Matriculas)
                                                                                {
                                                                                    int now = int.Parse(DateTime.Now.ToString("yyyyMMdd"));
                                                                                    int dob = int.Parse(matricula.Aluno.DataNascimento.ToString("yyyyMMdd"));
                                                                                    int age = (now - dob) / 10000;
                                                                                    <tr>
                                                                                        <td>@matricula.Aluno.Nome</td>
                                                                                        <td class="text-center">@age @(age > 1 ? "anos" : "ano")</td>
                                                                                        <td class="text-center">@matricula.Modulo</td>
                                                                                        <td>
                                                                                            <div class="starrating risingstar d-flex justify-content-center flex-row-reverse">
                                                                                                <input asp-for="@matricula.Estrelas" disabled type="radio" id="star5" value="5" /><label for="star5" title="5 star"></label>
                                                                                                <input asp-for="@matricula.Estrelas" disabled type="radio" id="star4" value="4" /><label for="star4" title="4 star"></label>
                                                                                                <input asp-for="@matricula.Estrelas" disabled type="radio" id="star3" value="3" /><label for="star3" title="3 star"></label>
                                                                                                <input asp-for="@matricula.Estrelas" disabled type="radio" id="star2" value="2" /><label for="star2" title="2 star"></label>
                                                                                                <input asp-for="@matricula.Estrelas" disabled type="radio" id="star1" value="1" /><label for="star1" title="1 star"></label>
                                                                                            </div>
                                                                                        </td>
                                                                                    </tr>
                                                                                }
                                                                            </tbody>
                                                                        </table>
                                                                        @if (dispSala.Reposicoes.Count > 0)
                                                                        {
                                                                            <h4>Reposição</h4>
                                                                            <table class="table table-sm">
                                                                                <thead>
                                                                                    <tr>
                                                                                        <th scope="col">Aluno</th>
                                                                                        <th scope="col" class="text-center">Idade</th>
                                                                                        <th scope="col" class="text-center">Módulo</th>
                                                                                        <th scope="col" class="text-center">Estrelas</th>
                                                                                    </tr>
                                                                                </thead>
                                                                                <tbody>
                                                                                    @foreach (var reposicao in dispSala.Reposicoes)
                                                                                    {
                                                                                        int now = int.Parse(DateTime.Now.ToString("yyyyMMdd"));
                                                                                        int dob = int.Parse(reposicao.Chamada.PacoteCompra.Matricula.Aluno.DataNascimento.ToString("yyyyMMdd"));
                                                                                        int age = (now - dob) / 10000;
                                                                                        <tr>
                                                                                            <td>@reposicao.Chamada.PacoteCompra.Matricula.Aluno.Nome</td>
                                                                                            <td class="text-center">@age @(age > 1 ? "anos" : "ano")</td>
                                                                                            <td class="text-center">@reposicao.Chamada.PacoteCompra.Matricula.Modulo</td>
                                                                                            <td>
                                                                                                <div class="starrating risingstar d-flex justify-content-center flex-row-reverse">
                                                                                                    <input asp-for="@reposicao.Chamada.PacoteCompra.Matricula.Estrelas" type="radio" id="star5" value="5" disabled /><label for="star5" title="5 star"></label>
                                                                                                    <input asp-for="@reposicao.Chamada.PacoteCompra.Matricula.Estrelas" type="radio" id="star4" value="4" disabled /><label for="star4" title="4 star"></label>
                                                                                                    <input asp-for="@reposicao.Chamada.PacoteCompra.Matricula.Estrelas" type="radio" id="star3" value="3" disabled /><label for="star3" title="3 star"></label>
                                                                                                    <input asp-for="@reposicao.Chamada.PacoteCompra.Matricula.Estrelas" type="radio" id="star2" value="2" disabled /><label for="star2" title="2 star"></label>
                                                                                                    <input asp-for="@reposicao.Chamada.PacoteCompra.Matricula.Estrelas" type="radio" id="star1" value="1" disabled /><label for="star1" title="1 star"></label>
                                                                                                </div>
                                                                                            </td>
                                                                                        </tr>
                                                                                    }
                                                                                </tbody>
                                                                            </table>
                                                                        }
                                                                        @if (dispSala.Demostrativas.Count > 0)
                                                                        {
                                                                            <h4>Demostrativas</h4>
                                                                            <table class="table table-sm">
                                                                                <thead>
                                                                                    <tr>
                                                                                        <th scope="col">Candidato</th>
                                                                                        <th scope="col" class="text-center">Idade</th>
                                                                                    </tr>
                                                                                </thead>
                                                                                <tbody>
                                                                                    @foreach (var demostrativa in dispSala.Demostrativas)
                                                                                    {
                                                                                        int now = int.Parse(DateTime.Now.ToString("yyyyMMdd"));
                                                                                        int dob = int.Parse(demostrativa.Candidato.DataNascimento.ToString("yyyyMMdd"));
                                                                                        int age = (now - dob) / 10000;
                                                                                        <tr>
                                                                                            <td>@demostrativa.Candidato.Nome</td>
                                                                                            <td class="text-center">@age @(age > 1 ? "anos" : "ano")</td>
                                                                                        </tr>
                                                                                    }
                                                                                </tbody>
                                                                            </table>
                                                                        }
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <a asp-action="Form" class="btn btn-success" asp-route-cursoId="@(curso.CursoId)"
                                                           asp-route-candidatoId="@(Model.Candidato.Id)"
                                                           asp-route-dispSalaId="@(dispSala.Id)">Selecionar</a>

                                                    </td>
                                                </tr>
                                            }
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>


            <hr class="my-4">
            <p>Após escolher o <b>Hário Disponível</b> finalize a reposição clicando em <b>Agendar</b>.</p>
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                Agendar
            </button>

            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" style="max-width: 70%!important;" role="document">
                    <div class="modal-content">
                        <form asp-action="Form" role="form" method="post">
                            <input asp-for="DispSala.Id" type="hidden" />
                            <input asp-for="Curso.Id" type="hidden" />
                            <input asp-for="Candidato.Id" type="hidden" />
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">
                                    @if (Model.DispSala != null)
                                    {
                                        <span>Demostrativa - @Html.DisplayFor(d => Model.DispSala.Dia) às @Model.DispSala.Hora.ToString("00:'00'h") com @Model.DispSala.Professor.Nome</span>
                                    }
                                    else
                                    {
                                        <span class="text-danger"><b>Selecione um horário disponível!</b></span>
                                    }
                                </h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label asp-for="DiaAula"></label>
                                            <input asp-for="DiaAula" type="date" class="form-control" />
                                            <span asp-validation-for="DiaAula" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-9">
                                        <div class="form-group">
                                            <label asp-for="Demostrativa.Observacao"></label>
                                            <textarea asp-for="Demostrativa.Observacao" rows="10" cols="60">
                                        </textarea>
                                            <span asp-validation-for="Demostrativa.Observacao" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                                    @if (Model.DispSala != null)
                                    {
                                        <button type="submit" class="btn btn-primary">Agendar</button>
                                    }
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/vendor/datatables/jquery.dataTables.js"></script>
    <script src="~/vendor/datatables/dataTables.bootstrap4.js"></script>
    <script src="~/js/demo/datatables-demo.js"></script>
    <script src="~/ckeditor/ckeditor.js"></script>
    <script>
        // Replace the <textarea id="editor1"> with a CKEditor
        // instance, using default configuration.
        CKEDITOR.replace('Demostrativa_Observacao');
    </script>
}

