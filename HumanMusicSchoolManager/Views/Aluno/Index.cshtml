                    </div>
                </td>
                <td class="text-center">
                    <input asp-for="@aluno.Ativo" onclick="return false" />
                </td>
                <td class="text-center">
                    <a asp-action="Aluno" asp-route-AlunoId="@(aluno.Id)">
                        <i class="material-icons text-success">update</i>
                    </a>
                </td>
                <td class="text-center">
                    <a asp-action="Excluir" id="excluir" asp-route-AlunoId="@(aluno.Id)">
                        <i class="material-icons text-danger">delete</i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts
    {
    <script>
        $('input#txt_consulta').quicksearch('table#tabela tbody tr');
    </script>
    <script>
        $("a#excluir").click(function () {
            var cf = confirm("Tem certeza que deseja excluir o aluno?");
            if (cf == true) {
                return true;
            }
            else {
                return false;
            }
        });
    </script>
}