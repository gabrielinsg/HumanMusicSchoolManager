@model Aluno
@{
    ViewData["Title"] = "Form";
}

<div class="row">
    <div class="col-md-11">
        <h2 class="col-md-10">Aluno</h2>
    </div>
    <div class="col-md-1">
        <a asp-action="Form" class="btn btn-primary">Novo</a>
    </div>
</div>
<br />
@await Html.PartialAsync("_Message")
<div class="list-group">
    <div class="list-group-item">
        <div class="col-md-4">
            <div class="form-group">
                <label><i class="fas fa-search"></i> Buscar Por Nome</label>
                <input id="BuscaNome" class="form-control">
            </div>
        </div>
    </div>
</div>
<br />
<div class="list-group">
    <div class="list-group-item">
        <form role="form" method="post" asp-action="form">

            <input asp-for="Id" type="hidden" />

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Nome"></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label asp-for="DataNascimento"></label>
                        <input asp-for="DataNascimento" class="form-control" type="date" />
                        <span asp-validation-for="DataNascimento" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label asp-for="RG"></label>
                        <input asp-for="RG" class="form-control mask-rg" />
                        <span asp-validation-for="RG" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label asp-for="CPF"></label>
                        <input asp-for="CPF" class="form-control mask-cpf" />
                        <span asp-validation-for="CPF" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Endereco.Logradouro"></label>
                        <input asp-for="Endereco.Logradouro" class="form-control" />
                        <span asp-validation-for="Endereco.Logradouro" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label asp-for="Endereco.Numero"></label>
                        <input asp-for="Endereco.Numero" class="form-control" />
                        <span asp-validation-for="Endereco.Numero" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Endereco.Bairro"></label>
                        <input asp-for="Endereco.Bairro" class="form-control" />
                        <span asp-validation-for="Endereco.Bairro" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="Endereco.Complemento"></label>
                        <input asp-for="Endereco.Complemento" class="form-control" />
                        <span asp-validation-for="Endereco.Complemento" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Endereco.Cidade"></label>
                        <input asp-for="Endereco.Cidade" class="form-control" />
                        <span asp-validation-for="Endereco.Cidade" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label asp-for="Endereco.UF" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <select asp-for="Endereco.UF" class="form-control" asp-items="Html.GetEnumSelectList<UF>()">
                                <option selected="selected" value=""></option>
                            </select>
                            <span asp-validation-for="Endereco.UF" class="text-danger" />
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label asp-for="Endereco.CEP"></label>
                        <input asp-for="Endereco.CEP" class="form-control mask-cep" />
                        <span asp-validation-for="Endereco.CEP" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="Tel"></label>
                        <input asp-for="Tel" class="form-control mask-tel" />
                        <span asp-validation-for="Tel" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="Cel"></label>
                        <input asp-for="Cel" class="form-control mask-tel" />
                        <span asp-validation-for="Cel" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Email">E-mail</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label asp-for="RM">RM</label>
                        <input asp-for="RM" class="form-control" required />
                        <span asp-validation-for="RM" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <div class="checkbox">
                            @if (Model == null)
                            {
                                <label asp-for="Ativo">
                                    <input asp-for="Ativo" checked />
                                    @Html.DisplayNameFor(p => p.Ativo)
                                </label>
                            }
                            else
                            {
                                <label asp-for="Ativo">
                                    <input asp-for="Ativo" />
                                    @Html.DisplayNameFor(p => p.Ativo)
                                </label>
                            }

                        </div>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-success">@(Model == null ? "Cadastrar" : Model.Id == null ? "Cadastrar" : "Alterar")</button>
            <a asp-action="Index" class="btn btn-primary">Voltar</a>
        </form>
    </div>
</div>
<br />


@section Scripts{
    <script src="~/js/Buscas/AlunoPorNome.js"></script>
}


