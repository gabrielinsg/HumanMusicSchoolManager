        $("a#excluir").click(function () {
            var cf = confirm("Tem certeza que deseja excluir o horário?");
            if (cf == true) {
                return true;
            }
            else {
                return false;
            }
        });

        $(function () {
            $('[data-toggle="popover"]').popover()

        });

        @if(ViewBag.DS != null)
        {
            <text>$('#myModal').modal('show')</text>
        }


    </script>
}
