                        @{
                            var nomeProfessor = dispSala.Professor.Nome.Trim();
                            var ultimaLetra = ' ';

                            for (int i = nomeProfessor.Length - 1; i > 0; i--)
                            {
                                if (nomeProfessor[i] == ' ')
                                {
                                    ultimaLetra = nomeProfessor[i + 1];
