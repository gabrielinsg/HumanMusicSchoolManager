@model RespFinanceiro
@{
    ViewData["Title"] = "Form";
}

<input id="rota" type="hidden" value="respFinanceiro" />


<div class="card mt-2 bg-secondary shadow">
    <form role="form" method="post" asp-action="form">
        <div class="card-header">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label><i class="fas fa-search"></i> Buscar Por Nome</label>
                        <input id="BuscaNome" class="form-control">
                    </div>
                </div>
                <div class="col-md-4"></div>
                <div class="col-md-2">
                    <a asp-action="Form" class="btn btn-primary">Novo</a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <input asp-for="Id" type="hidden" />

            <div class="row">
                <div class="col-lx-4 col-md-4">
                    <div class="form-group">
                        <label asp-for="Nome"></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-xl-2 col-md-3">
                    <div class="form-group">
                        <label asp-for="DataNascimento"></label>
                        <input asp-for="DataNascimento" class="form-control" type="date" />
                        <span asp-validation-for="DataNascimento" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label asp-for="RG"></label>
                        <input asp-for="RG" class="form-control mask-rg" />
                        <span asp-validation-for="RG" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-xl-2 col-md-3">
                    <label asp-for="OrgaoExpedidor"></label>
                    <input asp-for="OrgaoExpedidor" class="form-control" />
                    <span asp-validation-for="OrgaoExpedidor" class="text-danger"></span>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label asp-for="CPF"></label>
                        <input asp-for="CPF" class="form-control mask-cpf" />
                        <span asp-validation-for="CPF" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label asp-for="Endereco.CEP"></label>
                        <input asp-for="Endereco.CEP" class="form-control mask-cep" />
                        <span asp-validation-for="Endereco.CEP" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="form-group">
                        <label asp-for="Endereco.Logradouro"></label>
                        <input asp-for="Endereco.Logradouro" class="form-control" />
                        <span asp-validation-for="Endereco.Logradouro" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label asp-for="Endereco.Numero"></label>
                        <input asp-for="Endereco.Numero" class="form-control" />
                        <span asp-validation-for="Endereco.Numero" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="form-group">
                        <label asp-for="Endereco.Bairro"></label>
                        <input asp-for="Endereco.Bairro" class="form-control" />
                        <span asp-validation-for="Endereco.Bairro" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="Endereco.Complemento"></label>
                        <input asp-for="Endereco.Complemento" class="form-control" />
                        <span asp-validation-for="Endereco.Complemento" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Endereco.Cidade"></label>
                        <input asp-for="Endereco.Cidade" class="form-control" />
                        <span asp-validation-for="Endereco.Cidade" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label asp-for="Endereco.UF" class="control-label"></label>
                        <div class="">
                            <select asp-for="Endereco.UF" class="form-control" asp-items="Html.GetEnumSelectList<UF>()">
                                <option selected="selected" value=""></option>
                            </select>
                            <span asp-validation-for="Endereco.UF" class="text-danger" />
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="Tel"></label>
                        <input asp-for="Tel" class="form-control mask-tel" />
                        <span asp-validation-for="Tel" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="Cel"></label>
                        <input asp-for="Cel" class="form-control mask-tel" />
                        <span asp-validation-for="Cel" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Email">E-mail</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="Nacionalidade"></label>
                        <input asp-for="Nacionalidade" class="form-control" />
                        <span asp-validation-for="Nacionalidade" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="Naturalidade"></label>
                        <input asp-for="Naturalidade" class="form-control" />
                        <span asp-validation-for="Naturalidade" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-xl-2 col-md-3">
                    <div class="form-group">
                        <label asp-for="EstadoCivil" class=" control-label"></label>
                        <div class="">
                            <select asp-for="EstadoCivil" class="form-control" asp-items="Html.GetEnumSelectList<EstadoCivil>()">
                                <option selected="selected" value=""></option>
                            </select>
                            <span asp-validation-for="EstadoCivil" class="text-danger" />
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Profissao"></label>
                        <input asp-for="Profissao" class="form-control" />
                        <span asp-validation-for="Profissao" class="text-danger"></span>
                    </div>
                </div>


            </div>
            <div class="row">
                <div class="col-md-2">
                    <div class="custom-control custom-checkbox mb-3">
                        @if (Model == null)
                        {
                            <input asp-for="Ativo" class="custom-control-input" checked id="customCheck1" type="checkbox">
                            <label asp-for="Ativo" class="custom-control-label" for="customCheck1"></label>
                        }
                        else
                        {
                            <input asp-for="Ativo" class="custom-control-input" id="customCheck1" type="checkbox">
                            <label asp-for="Ativo" class="custom-control-label" for="customCheck1"></label>
                        }
                    </div>

                </div>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-success">@(Model == null ? "Cadastrar" : Model.Id == null ? "Cadastrar" : "Alterar")</button>
            <a asp-action="Index" class="btn btn-primary">Voltar</a>
        </div>
    </form>
</div>



@section Scripts{
    <script src="~/js/Buscas/BuscarPorNome.js"></script>
}


