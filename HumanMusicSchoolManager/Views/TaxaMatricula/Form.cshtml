@model TaxaMatricula
@{
    ViewData["Title"] = "Taxa de Matrícula";
}

<input id="rota" type="hidden" value="TaxaMatricula" />

<div class="card mt-2 bg-secondary shadow">
    <form role="form" method="post" asp-action="form">
        <div class="card-header">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label><i class="fas fa-search"></i> Buscar Por Nome</label>
                        <input id="BuscaNome" class="form-control" />
                    </div>
                </div>
                <div class="col-md-6"></div>
                <div class="col-md-2">
                    <div class="col-md-1">
                        <a asp-action="Form" class="btn btn-primary">Novo</a>
                    </div>
                </div>
            </div>        
        </div>
        <div class="card-body">
            <input asp-for="Id" type="hidden" />
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Nome"></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label asp-for="Valor"></label>
                        <input asp-for="Valor" class="form-control" required />
                        <span asp-validation-for="Valor" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-success">@(Model == null ? "Cadastrar" : Model.Id == null ? "Cadastrar" : "Alterar")</button>
            <a asp-action="Index" class="btn btn-primary">Voltar</a>
        </div>
    </form>
</div>

@section Scripts{
    <script src="~/js/Buscas/BuscarPorNome.js"></script>
}

