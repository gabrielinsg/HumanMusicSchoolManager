@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Entrar";
    Layout = "";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - HumanMusicSchoolManager</title>

    <environment include="Development">
        <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
        <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />
        <link href="~/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet" />
        <link href="~/css/sb-admin.css" rel="stylesheet" />
    </environment>
</head>
<body class="bg-dark">

    <div class="container">
        <div class="card card-login mx-auto mt-5">
            <div class="card-header">Login</div>
            <div class="card-body">
                <form sp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                    <div class="form-group">
                        <div class="form-label-group">
                            <input asp-for="UserName" id="inputLogin" placeholder="Usuário" class="form-control" required="required" />
                            <label asp-for="UserName" for="inputLogin"></label>
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-label-group">
                            <input asp-for="Password" id="inputSenha" required="required" placeholder="Senha" class="form-control" />
                            <label asp-for="Password" for="inputSenha"></label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="RememberMe">
                                <input asp-for="RememberMe" />
                                @Html.DisplayNameFor(m => m.RememberMe)
                            </label>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Entrar</button>
                </form>
                <div class="text-center">
                    <br />
                    <a class="d-block small" asp-action="ForgotPassword">Esqueceu sua senha?</a>
                </div>
            </div>
        </div>
    </div>

