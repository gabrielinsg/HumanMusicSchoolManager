@model Candidato
@{
    ViewData["Title"] = "Form";
}

<input id="rota" type="hidden" value="Candidato" />
<div class="row">
    <div class="col-md-11">
        <h2 class="col-md-10">Candidato</h2>
    </div>
    <div class="col-md-1">
        <a asp-action="Form" class="btn btn-primary">Novo</a>
    </div>
</div>
<br />
<div class="list-group">
    <div class="list-group-item">
        <div class="col-md-4">
            <div class="form-group">
                <label><i class="fas fa-search"></i> Buscar Por Nome</label>
                <input id="BuscaNome" class="form-control">
            </div>
        </div>
    </div>
</div>
<br />
    <div class="list-group">
        <div class="list-group-item">
            <form role="form" method="post" asp-action="form">

                <input asp-for="Id" type="hidden" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Nome"></label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="DataNascimento"></label>
                            <input asp-for="DataNascimento" class="form-control" type="date" />
                            <span asp-validation-for="DataNascimento" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label asp-for="CPF"></label>
                            <input asp-for="CPF" class="form-control mask-cpf" />
                            <span asp-validation-for="CPF" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="Tel"></label>
                            <input asp-for="Tel" class="form-control mask-tel" />
                            <span asp-validation-for="Tel" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="Cel"></label>
                            <input asp-for="Cel" class="form-control mask-tel" />
                            <span asp-validation-for="Cel" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Email">E-mail</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <button type="submit" class="btn btn-success">@(Model == null ? "Cadastrar" : Model.Id == null ? "Cadastrar" : "Alterar")</button>
                <a asp-action="Index" class="btn btn-primary">Voltar</a>
            </form>
        </div>
    </div>
    <br />


    @section Scripts{
        <script src="~/js/Buscas/BuscarPorNome.js"></script>
    }


