@model Candidato
@{
    ViewData["Title"] = "Candidato";
}

<input id="rota" type="hidden" value="Candidato" />

<div class="card mt--5 bg-secondary shadow">
    <form role="form" method="post" asp-action="form">
        <div class="card-header">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label><i class="fas fa-search"></i> Buscar Por Nome</label>
                        <input id="BuscaNome" class="form-control">
                    </div>
                </div>
                <div class="col-md-6"></div>
                <div class="col-xl-1 col-md-2">
                    <a asp-action="Form" class="btn btn-primary">Novo</a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <input asp-for="Id" type="hidden" />

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Nome"></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-xl-2 col-md-3">
                    <div class="form-group">
                        <label asp-for="DataNascimento"></label>
                        <input asp-for="DataNascimento" class="form-control" type="date" />
                        <span asp-validation-for="DataNascimento" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-xl-2 col-md-3">
                    <div class="form-group">
                        <label asp-for="CPF"></label>
                        <input asp-for="CPF" class="form-control mask-cpf" />
                        <span asp-validation-for="CPF" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="Tel"></label>
                        <input asp-for="Tel" class="form-control mask-tel" />
                        <span asp-validation-for="Tel" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="Cel"></label>
                        <input asp-for="Cel" class="form-control mask-tel" />
                        <span asp-validation-for="Cel" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-xl-3 col-md-3">
                    <div class="form-group">
                        <label asp-for="Email">E-mail</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="Sexo" class="col-md-4 control-label"></label>
                        <div class="col-md-10">
                            <select asp-for="Sexo" class="form-control" asp-items="Html.GetEnumSelectList<Sexo>()">
                                <option selected="selected" value=""></option>
                            </select>
                            <span asp-validation-for="Sexo" class="text-danger" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-success">@(Model == null ? "Cadastrar" : Model.Id == null ? "Cadastrar" : "Alterar")</button>
            <a asp-action="Index" class="btn btn-primary">Voltar</a>
        </div>
    </form>
</div>

    @section Scripts{
        <script src="~/js/Buscas/BuscarPorNome.js"></script>
    }


