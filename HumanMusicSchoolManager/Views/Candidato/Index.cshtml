@model List<Candidato>
@{
    ViewData["Title"] = "Canditados";
}

@section Styles {
    <link type="text/css" rel="stylesheet" href="~/css/tabelas.css" />
}

<div class="card mb-3">
    <div class="card-header">
        <div class="row">
            <div class="col-xl-11 col-md-10">
                <i class="fas fa-table"></i>
                Canditados
            </div>
            <div class="col-xl-1 col-md-2">
                <a asp-action="Form" class="btn btn-primary">Novo</a>
            </div>
        </div>
    </div>
    <div class="card-body" id="card-body">
        <div class="table-responsive">
            <table class="table table-sm align-items-center table-hover table-flush dataTable no-footer" id="dataTable" cellspacing="0">
                <thead class="thead-light">
                    <tr>
                        <th>Nome</th>
                        <th class="text-center ">Celular</th>
                        <th class="text-center"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var candidato in Model)
                    {
                    <tr>
                        <td>@candidato.Nome</td>
                        <td class="text-center">@candidato.Cel</td>
                        <td>
                            <div class="avatar-group">
                                <a data-toggle="tooltip" data-placement="top" title="Informções" class="avatar avatar-sm" asp-action="Candidato" asp-route-candidatoId="@candidato.Id">
                                    <img alt="Image placeholder" src="~/img/user.png" class="rounded-circle">
                                </a>
                                <a data-toggle="tooltip" data-placement="top" title="Dados" class="avatar avatar-sm bg-warning" asp-action="Form" asp-route-candidatoId="@(candidato.Id)"><i class="fas fa-pencil-alt text-xl"></i></a>
                            </div>
                        </td>

                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/vendor/datatables/jquery.dataTables.js"></script>
    <script src="~/vendor/datatables/dataTables.bootstrap4.js"></script>
    <script src="~/js/demo/datatables-demo.js"></script>
}



