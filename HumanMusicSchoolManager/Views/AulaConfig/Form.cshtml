@model AulaConfig
@{
    ViewData["Title"] = "Form";
}

<h2>Form</h2>
<div class="row">
    <div class="col-md-2">
        <form asp-action="Form">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input asp-for="Id" type="hidden" />
            @if (Model != null)
            {
                <input name="horaAntiga" type="hidden" value="@Model.TempoLimiteLancamento" />
            }
            <div class="form-group">
                <label asp-for="TempoLimiteLancamento" class="control-label"></label>
                <input asp-for="TempoLimiteLancamento" type="number" class="form-control" />
                <span asp-validation-for="TempoLimiteLancamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="LancamentoAtrasado" /> @Html.DisplayNameFor(model => model.LancamentoAtrasado)
                    </label>
                </div>
            </div>
            <hr />
            <div class="form-group">
                <label asp-for="MinCaracteresDescAtividades" class="control-label"></label>
                <input asp-for="MinCaracteresDescAtividades" type="number" class="form-control" />
                <span asp-validation-for="MinCaracteresDescAtividades" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="DescAtividadesObrigatorio" /> @Html.DisplayNameFor(model => model.DescAtividadesObrigatorio)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

