@model ProfessorViewModel

@{
    ViewData["Title"] = "Index";
}

<h2>Professores</h2>
<hr />

<div class="row">
    <div class="col-md-10">
        <div class="form-group input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-search"></i></span>
            <input name="consulta" id="txt_consulta" placeholder="Consultar" type="text" class="form-control">
        </div>
    </div>
    <div class="col-md-2">
        <a asp-action="Form" class="btn btn-primary">Novo</a>
    </div>
</div>

<table id="tabela" class="table table-hover">
    <thead>
        <tr>
            <th>Nome</th>
            <th class="text-center">Id</th>
            <th>E-mail</th>
            <th class="text-center">Salário</th>
            <th class="text-center">Cursos</th>
            <th class="text-center">Diário de Classe</th>
            <th class="text-center">Ativo</th>
            <th class="text-center">Alterar</th>
            <th class="text-center">Excluir</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var professor in Model.Professores)
        {
            <tr>
                <td>
                    <a asp-action="Professor" asp-route-professorId="@(professor.Id)" class="text-success">@professor.Nome</a>
                </td>
                <td class="text-center">@professor.Id</td>
                <td>@professor.Email</td>
                <td class="text-center">@professor.Salario</td>
                <td class="text-center">
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Cursos
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <table id="tabela" class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>
                                            <a asp-action="ProfessorCurso" asp-route-professorId="@professor.Id" class="btn btn-primary">Alterar</a>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var curso in professor.Cursos)
                                    {
                                        <tr>
                                            <td>@(curso.Curso.Nome)</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </td>
                <td class="text-center">
                    <a asp-controller="diarioClasse" asp-action="Index" asp-route-professorId="@professor.Id">
                        <i class="material-icons text-success">list</i>
                    </a>                    
                </td>
                <td class="text-center">
                    <input asp-for="@professor.Ativo" onclick="return false" />
                </td>
                <td class="text-center">
                    <a asp-action="Professor" asp-route-professorId="@(professor.Id)">
                        <i class="material-icons text-success">update</i>
                    </a>
                </td>
                <td class="text-center">
                    <a asp-action="Excluir" id="excluir" asp-route-professorId="@(professor.Id)">
                        <i class="material-icons text-danger">delete</i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>


@section Scripts
    {
    <script>
        $('input#txt_consulta').quicksearch('table#tabela tbody tr');
    </script>
    <script>
        $("a#excluir").click(function () {
            var cf = confirm("Tem certeza que deseja excluir o professor?");
            if (cf == true) {
                return true;
            }
            else {
                return false;
            }
        });
    </script>
}