@model Professor
@{
    ViewData["Title"] = "Form";
}

<h2>Professor</h2>

<form role="form" method="post" asp-action="form">

    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Nome"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-group">
                <label asp-for="DataNascimento"></label>
                <input asp-for="DataNascimento" class="form-control" type="date"/>
                <span asp-validation-for="DataNascimento" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-group">
                <label asp-for="RG"></label>
                <input asp-for="RG" class="form-control mask-rg"/>
                <span asp-validation-for="RG" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-group">
                <label asp-for="CPF"></label>
                <input asp-for="CPF" class="form-control mask-cpf" />
                <span asp-validation-for="CPF" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Endereco.Logradouro"></label>
                <input asp-for="Endereco.Logradouro" class="form-control" />
                <span asp-validation-for="Endereco.Logradouro" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Email">E-mail</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Salario">Salario</label>
                <input asp-for="Salario" class="form-control">
                <span asp-validation-for="Salario" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="Ativo">
                        <input asp-for="Ativo" checked="checked" />
                        @Html.DisplayNameFor(p => p.Ativo)
                    </label>
                </div>
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-success">Cadastrar</button>
    <a asp-action="Index" class="btn btn-default">Voltar</a>
</form>



