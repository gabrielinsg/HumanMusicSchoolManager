@model List<PacoteAula>
@{
    ViewData["Title"] = "Pacotes de Aula";
}

@section Styles {
    <link type="text/css" rel="stylesheet" href="~/css/tabelas.css" />
}

<div class="card mb-3">
    <div class="card-header">
        <div class="row">
            <div class="col-md-10">
                <i class="fas fa-table"></i>
                Pacotes de Aula
            </div>
            <div class="col-md-2">
                <a asp-action="Form" class="btn btn-primary">Novo</a>
            </div>
        </div>

    </div>
    <div class="card-body" id="card-body">
        <div class="table-responsive">
        <table class="table table-sm align-items-center table-hover table-flush dataTable no-footer" id="dataTable" cellspacing="0">
                <thead class="thead-light">
                    <tr>
                        <th>Nome</th>
                        <th class="text-center">Qtd Aulas</th>
                        <th class="text-center">Valor</th>
                        <th class="text-center">Tipo de aula</th>
                        <th class="text-center">Ativo</th>
                        <th class="text-center">Alterar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var pacoteAula in Model)
                    {
                        <tr>
                            <td>@pacoteAula.Nome</td>
                            <td class="text-center">@pacoteAula.QtdAula</td>
                            <td class="text-center">@pacoteAula.Valor.ToString("R$ #,###.00")</td>
                            <td class="text-center">@Html.DisplayFor(pc => pacoteAula.TipoAula)</td>
                            <td class="text-center">
                                <div class="custom-control custom-checkbox mb-3">
                                    <input class="custom-control-input" asp-for="@pacoteAula.Ativo" onclick="return false" />
                                    <label class="custom-control-label" for="customCheck1"></label>
                                </div>
                            </td>
                            <td>
                                 <div class="avatar-group">
                                    <a data-toggle="tooltip" data-placement="top" title="Dados" class="avatar avatar-sm bg-warning" asp-action="Form" asp-route-pacoteAulaId="@(pacoteAula.Id)"><i class="fas fa-pencil-alt"></i></a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/vendor/datatables/jquery.dataTables.js"></script>
    <script src="~/vendor/datatables/dataTables.bootstrap4.js"></script>
    <script src="~/js/demo/datatables-demo.js"></script>
}