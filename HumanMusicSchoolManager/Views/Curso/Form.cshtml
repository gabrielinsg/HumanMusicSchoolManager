@model Curso
@{
    ViewData["Title"] = "Curso";
}

<input id="rota" type="hidden" value="Curso" />
<div class="card bg-secondary mt-2 shadow">
    <form role="form" method="post" asp-action="form">
        <div class="card-header">
            <div class="row">
                <div class="col-md-5">
                    <div class="form-group">
                        <label><i class="fas fa-search"></i> Buscar Por Nome</label>
                        <input id="BuscaNome" class="form-control">
                    </div>
                </div>
                <div class="col-md-5"></div>
                <div class="col-md-2">
                    <a asp-action="Form" class="btn btn-primary">Novo</a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <input asp-for="Id" type="hidden" />
            <div class="row">
                <div class="col-md-5">
                    <div class="form-group">
                        <label asp-for="Nome"></label>
                        <input asp-for="Nome" class="form-control">
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="QtdModulo"></label>
                        <input asp-for="QtdModulo" type="number" class="form-control" required />
                        <span asp-validation-for="QtdModulo" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="DuracaoAula"></label>
                        <input asp-for="DuracaoAula" type="number"  class="form-control" required />
                        <span asp-validation-for="DuracaoAula" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    <div class="form-group">
                        <div class="custom-control custom-checkbox mb-3">
                            @if (Model == null)
                            {
                                <input asp-for="Ativo" class="custom-control-input" checked id="customCheck1" type="checkbox">
                                <label asp-for="Ativo" class="custom-control-label" for="customCheck1"></label>
                            }
                            else
                            {
                                <input asp-for="Ativo" class="custom-control-input" id="customCheck1" type="checkbox">
                                <label asp-for="Ativo" class="custom-control-label" for="customCheck1"></label>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-success">@(Model == null ? "Cadastrar" : Model.Id == null ? "Cadastrar" : "Alterar")</button>
            <a asp-action="Index" class="btn btn-primary">Voltar</a>
        </div>
    </form>
</div>

@section Scripts{
    <script src="~/js/Buscas/BuscarPorNome.js"></script>
}


