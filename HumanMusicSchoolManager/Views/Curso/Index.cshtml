@model List<Curso>
@{
    ViewData["Title"] = "Curso";
}

@section Styles {
    <link type="text/css" rel="stylesheet" href="~/css/tabelas.css" />
}

<div class="card mt--5">
    <div class="card-header">
        <div class="row">
            <div class="col-xl-11 col-md-10">
                <i class="fas fa-table"></i>
                Cursos
            </div>
            <div class="col-xl-1 col-md-2">
                <a asp-action="Form" class="btn btn-primary">Novo</a>
            </div>
        </div>
        
    </div>
    <div class="card-body" id="card-body">
        <div class="table-responsive">
            <table class="table align-items-center table-sm table-hover table-flush dataTable no-footer" id="dataTable" id="dataTable" width="100%" cellspacing="0">
                <thead class="thead-light">
                    <tr>
                        <th>Nome</th>
                        <th class="text-center">Qtd Módulos</th>           
                        <th class="text-center">Ativo</th>
                        <th class="text-center">Alterar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var curso in Model)
                    {
                        <tr>
                            <td>@curso.Nome</td>
                            <td class="text-center">@curso.QtdModulo</td>
                            <td class="text-center">
                                <div class="custom-control custom-checkbox mb-3">
                                    <input asp-for="@curso.Ativo" class="custom-control-input" id="customCheck1" onclick="return false" type="checkbox">
                                    <label class="custom-control-label" for="customCheck1"></label>
                                </div>
                            </td>
                            <td class="text-center">
                                <div class="avatar-group">
                                    <a data-toggle="tooltip" data-placement="top" title="Dados" class="avatar avatar-sm bg-warning" asp-action="Form" asp-route-cursoId="@(curso.Id)"><i class="fas fa-pencil-alt"></i></a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/vendor/datatables/jquery.dataTables.js"></script>
    <script src="~/vendor/datatables/dataTables.bootstrap4.js"></script>
    <script src="~/js/demo/datatables-demo.js"></script>
}

