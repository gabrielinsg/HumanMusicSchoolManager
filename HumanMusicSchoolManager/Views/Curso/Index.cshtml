@model CursoViewModel
@{
    ViewData["Title"] = "Index";
}

<h2>Curso</h2>
<hr />
<body>
    <div class="row">
        <div class="col-md-10">
            <div class="form-group input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-search"></i></span>
                <input name="consulta" id="txt_consulta" placeholder="Consultar" type="text" class="form-control">
            </div>
        </div>
        <div class="col-md-2">
            <a asp-action="Form" class="btn btn-primary">Novo</a>
        </div>
    </div>

    <table id="tabela" class="table table-hover">
        <thead>
            <tr>
                <th>Nome</th>
                <th class="text-center">Id</th>
                <th class="text-center">Ativo</th>
                <th class="text-center">Alterar</th>
                <th class="text-center">Excluir</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var curso in Model.Cursos)
            {
                <tr>
                    <td>
                        <a asp-action="Curso" asp-route-cursoId="@(curso.Id)" class="text-success">@curso.Nome</a>
                    </td>
                    <td class="text-center">@curso.Id</td>
                    <td class="text-center">
                        <input asp-for="@curso.Ativo" onclick="return false" />
                    </td>
                    <td class="text-center"><a asp-action="Curso" id="alterar" asp-route-cursoId="@curso.Id"><i class="material-icons text-success">update</i></a></td>
                    <td class="text-center"><a asp-action="Excluir" id="excluir" asp-route-cursoId="@curso.Id"><i class="material-icons text-danger">delete</i></a></td>
                </tr>
            }
        </tbody>
    </table>
</body>

@section Scripts
    {
    <script>
        $('input#txt_consulta').quicksearch('table#tabela tbody tr');
    </script>
    <script>
        $("a#excluir").click(function () {
            var cf = confirm("Tem certeza que deseja excluir o curso?");
            if (cf == true) {
                return true;
            }
            else {
                return false;
            }
        });
    </script>
}

