@model Contrato
@{
    ViewData["Title"] = "Form";
}

<input id="rota" type="hidden" value="Contrato" />
<div class="row">
    <div class="col-md-11">
        <h2 class="col-md-10">Contrato</h2>
    </div>
    <div class="col-md-1">
        <a asp-action="Form" class="btn btn-primary">Novo</a>
    </div>
</div>
<br />
<div class="list-group">
    <div class="list-group-item">
        <div class="col-md-4">
            <div class="form-group">
                <label><i class="fas fa-search"></i> Buscar Por Nome</label>
                <input id="BuscaNome" class="form-control">
            </div>
        </div>
    </div>
</div>
<br />
<div class="list-group">
    <div class="list-group-item">
        <form role="form" method="post" asp-action="form">

            <input asp-for="Id" type="hidden" />
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Nome"></label>
                        <input asp-for="Nome" class="form-control">
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    <div class="form-group">
                        <div class="checkbox">
                            @if (Model == null)
                            {
                                <label asp-for="Ativo">
                                    <input asp-for="Ativo" checked="checked" />
                                    @Html.DisplayNameFor(p => p.Ativo)
                                </label>
                            }
                            else
                            {
                                <label asp-for="Ativo">
                                    <input asp-for="Ativo" />
                                    @Html.DisplayNameFor(p => p.Ativo)
                                </label>
                            }

                        </div>
                    </div>
                </div>
            </div>


            <div class="dropdown">
                <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Mapa de tags
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <ul class="list-group">
                        <li class="list-group-item active">Responsável Financeiro</li>
                        <li class="list-group-item">
                            {Responsavel.Nome}
                            {Responsavel.CPF}
                            {Responsavel.RG}
                            {Responsavel.DataNasc}
                            {Responsavel.Idade}
                            {Responsavel.Logradouro}
                            {Responsavel.Numero}
                            {Responsavel.Cidade}
                            {Responsavel.UF}
                            {Responsavel.Bairro}
                            {Responsavel.CEP}
                            {Responsavel.Cel}
                            {Responsavel.Tel}
                            {Responsavel.Email}
                            {Responsavel.Nacionalidade}
                            {Responsavel.Naturalidade}
                            {Responsavel.EstadoCivil}
                        </li>
                    </ul>
                    <ul class="list-group">
                        <li class="list-group-item active">Aluno</li>
                        <li class="list-group-item">
                            {Aluno.Nome}
                            {Aluno.CPF}
                            {Aluno.RG}
                            {Aluno.DataNasc}
                            {Aluno.Idade}
                            {Aluno.Logradouro}
                            {Aluno.Numero}
                            {Aluno.Cidade}
                            {Aluno.UF}
                            {Aluno.Bairro}
                            {Aluno.CEP}
                            {Aluno.Cel}
                            {Aluno.Tel}
                            {Aluno.email
                            {Pacote.Nome}
                        </li>
                    </ul>
                    <ul class="list-group">
                        <li class="list-group-item active">Pacote</li>
                        <li class="list-group-item">
                            {Pacote.Valor}
                            {Pacote.ValorExtenso}
                            {Pacote.QtdParcelas}
                            {Pacote.TipoAula}
                            {Matricula.Curso}
                            {Matricula.DataMatricula}
                            {Financeiro}
                        </li>
                    </ul>
                    <ul class="list-group">
                        <li class="list-group-item active">Matricula</li>
                        <li class="list-group-item">
                            {Matricula.Curso}
                            {Matricula.DataMatricula}
                        </li>
                    </ul>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <textarea asp-for="Conteudo" rows="10" cols="80">
                    </textarea>
                    <span asp-validation-for="Conteudo" class="text-danger"></span>
                </div>
            </div>
            <br />
            <button type="submit" class="btn btn-success">@(Model == null ? "Cadastrar" : Model.Id == null ? "Cadastrar" : "Alterar")</button>
            <a asp-action="Index" class="btn btn-primary">Voltar</a>
        </form>
    </div>

</div>
@section Scripts{
    <script src="~/js/Buscas/BuscarPorNome.js"></script>
    <script src="~/ckeditor-full/ckeditor.js"></script>
    <script>
        // Replace the <textarea id="editor1"> with a CKEditor
        // instance, using default configuration.
        CKEDITOR.replace('Conteudo').config.height = '500px';
    </script>
}
